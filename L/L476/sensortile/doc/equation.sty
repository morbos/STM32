\usepackage{amsmath}
\def\eeq{\relax}

\def\elabel#1{\label{Equation:#1}}

\def\beq#1#2\eeq{\begin{equation}\elabel{#1}#2\end{equation}}

\def\beqs#1#2\eeq{\begin{equation}\elabel{#1}%
    \begin{split}%
    #2%
    \end{split}%
\end{equation}}

\def\beqst#1\eeq{\begin{equation*}%
    \begin{split}%
    #1%
    \end{split}%
\end{equation*}}

\def\beqa#1\eeq{\begin{align}{#1}\end{align}}

\def\@redef@eq{
    \gdef\eq##1{\\\elabel{##1}}
}

\def\@base@def@eq{
    \def\eq##1{\@redef@eq\elabel{##1}}
}

\def\bmeq#1\eeq{\begin{align}
    \@base@def@eq
    #1
\end{align}}
