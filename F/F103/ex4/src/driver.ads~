--  This file provides the declaration for the task controlling the LEDs on
--  the RM57 launchpad.

with System;

package Driver is

   Counter : Float := 0.0;

   task Controller1 is
      pragma Storage_Size (4 * 1024);
      pragma Priority (System.Default_Priority);
   end Controller1;

   task Controller2 is
      pragma Storage_Size (4 * 1024);
      pragma Priority (System.Default_Priority);
   end Controller2;

end Driver;
